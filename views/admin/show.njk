{% extends "./templateAdmin.njk" %}

{% block head %}
    <title>Foodify - Mostrar</title>
{% endblock %}

{% block nav %}

    <div class="nav">
        <div class="links_">
            <div class="logo"><a href="/"><img src="/imgs/logo_white.png" alt="Logo Foodify"></a></div>
        </div>
    </div>
    
 {% endblock %}

{% block content %}

    <div class="contents">

        <div class="title">
            <h2>Receita: {{ recipe.title}}</h2>
            <div class="btNav">
                <a href="/admin/edit/{{ recipe.id }}"><button class="bt_primary" type="submit">Editar receita</button></a> 
            </div>
        </div>

        <section 
            class="banner__img"
            style="background: url({{ recipe.img_recipe }}) no-repeat center center / cover;">
        </section>

        <div class="boxTitle">
            <h1>{{ recipe.title }}</h1>
            <h3>Adicionada: {{ recipe.create_at }}</h3>
        </div>
        <div class="boxInfo">
            <div class="itemDescription">
                <h3>Ingredientes</h3>
                <div class="txtItem">
                    {% for itemIngredient in recipe.ingredients %}
                        <span> - {{ itemIngredient }} </span> <br>
                    {% endfor %}
                </div>
            </div>

            <div class="itemDescription">
                <h3>Modo de preparo</h3>
                <div class="txtItem">
                    {% for itemSteps in recipe.method_of_preparation %}
                        <span> - {{ itemSteps }} </span> <br>
                    {% endfor %}
                </div>
            </div>

            <div class="itemDescription">
                <h3>Informações adicionais</h3>
                <div class="txtItem">
                    <span> - {{ recipe.aditional_info }} </span>
                </div>
            </div>        
        </div>
        
        
    </div>

{% endblock %}